{
  "name": "unwasm",
  "version": "0.3.9",
  "description": "WebAssembly tools for JavaScript",
  "repository": "unjs/unwasm",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./examples/*": "./examples/*",
    "./plugin": {
      "import": {
        "types": "./dist/plugin.d.mts",
        "default": "./dist/plugin.mjs"
      },
      "require": {
        "types": "./dist/plugin.d.ts",
        "default": "./dist/plugin.cjs"
      }
    },
    "./tools": {
      "import": {
        "types": "./dist/tools.d.mts",
        "default": "./dist/tools.mjs"
      },
      "require": {
        "types": "./dist/tools.d.ts",
        "default": "./dist/tools.cjs"
      }
    }
  },
  "files": [
    "dist",
    "*.d.ts",
    "examples/*.wasm",
    "examples/package.json",
    "examples/*.mjs"
  ],
  "scripts": {
    "build": "unbuild && pnpm build:examples",
    "build:examples": "node ./examples/build.mjs",
    "dev": "vitest dev",
    "lint": "eslint --cache . && prettier -c src test",
    "lint:fix": "eslint --cache . --fix && prettier -c src test -w",
    "prepack": "pnpm build",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && pnpm test:types && vitest run --coverage",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "knitwork": "^1.2.0",
    "magic-string": "^0.30.17",
    "mlly": "^1.7.4",
    "pathe": "^2.0.3",
    "pkg-types": "^1.3.1",
    "unplugin": "^2.3.5"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/node": "^22.17.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@webassemblyjs/wasm-parser": "^1.14.1",
    "assemblyscript": "^0.28.4",
    "automd": "^0.4.0",
    "changelogen": "^0.6.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.33.0",
    "eslint-config-unjs": "^0.5.0",
    "jiti": "^2.5.1",
    "miniflare": "^3.20250718.1",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "typescript": "^5.9.2",
    "unbuild": "^3.6.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "resolutions": {
    "@webassemblyjs/helper-wasm-bytecode": "1.14.1",
    "@webassemblyjs/ieee754": "1.14.1",
    "@webassemblyjs/leb128": "1.14.1",
    "@webassemblyjs/utf8": "1.14.1"
  },
  "packageManager": "pnpm@9.15.9"
}
