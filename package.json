{
  "name": "unwasm",
  "version": "0.4.2",
  "description": "WebAssembly tools for JavaScript",
  "repository": "unjs/unwasm",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./examples/*": "./examples/*",
    "./plugin": "./dist/plugin/index.mjs",
    "./tools": "./dist/tools/index.mjs"
  },
  "files": [
    "dist",
    "examples/*.wasm",
    "examples/package.json",
    "examples/*.mjs"
  ],
  "scripts": {
    "build": "obuild && pnpm build:examples",
    "build:examples": "node ./examples/build.mjs",
    "dev": "vitest dev",
    "lint": "eslint --cache . && prettier -c src test",
    "lint:fix": "eslint --cache . --fix && prettier -c src test -w",
    "prepack": "pnpm build",
    "release": "pnpm test && pnpm build && changelogen --release --push --publish",
    "test": "pnpm lint && pnpm test:types && vitest run --coverage",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "exsolve": "^1.0.7",
    "knitwork": "^1.2.0",
    "magic-string": "^0.30.21",
    "mlly": "^1.8.0",
    "pathe": "^2.0.3",
    "pkg-types": "^2.3.0"
  },
  "devDependencies": {
    "@prisma/client": "^6.18.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@webassemblyjs/wasm-parser": "^1.14.1",
    "assemblyscript": "^0.28.9",
    "automd": "^0.4.2",
    "changelogen": "^0.6.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "eslint-config-unjs": "^0.5.0",
    "exsolve": "^1.0.7",
    "jiti": "^2.6.1",
    "miniflare": "^4.20251011.1",
    "obuild": "^0.3.2",
    "prettier": "^3.6.2",
    "rollup": "^4.52.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6",
    "wabt": "^1.0.38"
  },
  "resolutions": {
    "@webassemblyjs/helper-wasm-bytecode": "1.14.1",
    "@webassemblyjs/ieee754": "1.14.1",
    "@webassemblyjs/leb128": "1.14.1",
    "@webassemblyjs/utf8": "1.14.1"
  },
  "packageManager": "pnpm@10.20.0"
}
